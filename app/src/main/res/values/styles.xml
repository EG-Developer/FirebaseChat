<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="EditTextStart" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorMain</item>
        <item name="colorControlNormal">@color/colorOffFunction</item>
        <item name="android:textCursorDrawable">@color/colorAccent</item>
        <item name="colorAccent">@color/colorMain</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
